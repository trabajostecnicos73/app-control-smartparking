{
  "name": "control",
  "version": "1.0.0",
  "description": "Sistema Central de Control y Monitoreo",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:electron": "concurrently \"vite\" \"wait-on http://localhost:5174 && electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jspdf": "^2.5.2",
    "multer": "^1.4.5-lts.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.1.3",
    "better-sqlite3": "^11.8.1",
    "uuid": "^11.0.5"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.4",
    "concurrently": "^9.1.2",
    "electron": "^33.3.1",
    "electron-builder": "^25.1.8",
    "vite": "^6.0.7",
    "wait-on": "^8.0.1"
  },
  "build": {
  "asar": true,
  "asarUnpack": [
    "**/node_modules/better-sqlite3/**/*",
    "preload.cjs"
  ],
  "files": [
    "dist/**/*",
    "main.js",
    "preload.cjs",
    "package.json"
  ]
}
}
